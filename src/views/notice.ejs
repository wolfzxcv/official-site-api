<%- include('./header.ejs') %>
  <div class="row mx-0 flex-nowrap">
    <%- include('./nav.ejs') %>
      <div class="col py-3">
        <div class="d-flex justify-content-between mb-3">
          <h1>
            <%= notice %>(<%= siteName %>)
          </h1>
          <a href="/notice/create?site=<%= site %>" class="btn btn-outline-primary" style="line-height: 2.2"
            type="button">
            <%= create %>
              <%= notice %>(
                <%= siteName %>
                  )
          </a>
        </div>
        <table class="table table-bordered table-hover">
          <thead class="bg-primary text-white">
            <tr>
              <th>語系</th>
              <th>標題</th>
              <th>是否置頂</th>
              <th>展示時間</th>
              <th>創建時間</th>
              <th>更新時間</th>
              <th>工具</th>
            </tr>
          </thead>
          <tbody>
            <% data.map((each)=> { %>
              <tr>
                <td class="text-nowrap">
                  <%= each.lang %>
                </td class="text-nowrap">
                <td>
                  <%= each.title %>
                </td>
                <td>
                  <%= each.onTop===1? 'V' : '' %>
                </td>
                <td>
                  <%= each.showTime %>
                </td>
                <td>
                  <%= each.createTime %>
                </td>
                <td>
                  <%= each.updateTime %>
                </td>
                <td>
                  <a href="/notice/update?id=<%= each.id %>&site=<%= site %>" type="button"
                    class="btn btn-outline-success">
                    編輯
                  </a>
                  <a href="/notice/delete?id=<%= each.id %>&site=<%= site %>" type="button"
                    class="btn btn-outline-danger">
                    刪除
                  </a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
  </div>
  <%- include('./footer.ejs') %>