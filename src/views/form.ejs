<%- include('./header.ejs') %>

  <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/super-build/ckeditor.js"></script>


  <div class="row mx-0 flex-nowrap">
    <%- include('./nav.ejs') %>
      <div class="col py-3">
        <h2>
          <%= method %>
            <%= page %>
        </h2>
        <form class="my-5 mx-3" action="/market/create" method="POST">
          <div class="mb-3 row">
            <label for="lang" class="col-sm-2 col-form-label">語言</label>
            <div class="col-sm-10">
              <select id="lang" class="form-select" aria-label="選取語言">
                <option value="cn">簡體中文</option>
                <option value="zh">繁體中文</option>
                <option value="en">英文</option>
              </select>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="title" class="col-sm-2 col-form-label">標題</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="title" required>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="onTop" class="col-sm-2 col-form-label">置頂</label>
            <div class="col-sm-10">
              <div class="form-check form-switch styled-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="onTop" checked>
              </div>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="externalLink" class="col-sm-2 col-form-label">外部連結</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="externalLink">
            </div>
          </div>

          <div class="mb-3 row">
            <label for="time" class="col-sm-2 col-form-label">展示時間</label>
            <div class="col-sm-10">
              <input type="date" class="form-control" id="time" min="2022-01-01" max="2030-12-31" required>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="content" class="col-sm-2 col-form-label">內容</label>
            <div class="col-sm-10">
              <div id="editor"></div>
            </div>
          </div>
      </div>
  </div>
  <script src="../js/ckeditor-config.js" crossorigin="anonymous"></script>
  <%- include('./footer.ejs') %>