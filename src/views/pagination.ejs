<% if (total && total>1) { %>
  <div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" aria-label="Previous" href="/<%= pageUrl %>/?page= <%= page-1 <= 1 ? 1 : page-1 %>">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>

        <% for (let i=0; i < total; i++) { %>
          <li class="page-item"><a class="page-link" href="/<%= pageUrl %>/?page=<%=i + 1 %>">
              <%=i + 1%>
            </a></li>
          <% } %>

            <li class="page-item">
              <a class="page-link" href="/<%= pageUrl %>/?page=<%= page + 1 >= total ? total : page + 1 %>"
                aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
      </ul>
    </nav>
  </div>
  <% } %>