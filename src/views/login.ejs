<%- include('./header.ejs') %>
	<div class="login">
		<main class="form-signin">
			<form class="needs-validation" action="/login" method="POST" novalidate>
				<h1 class="h3 mb-3 fw-normal text-center">
					<%= siteName %> 後台系統
				</h1>

				<div class="form-floating mt-5">
					<input type="text" class="form-control" name="username" placeholder="Username" required>
					<label>帳號</label>
					<div class="invalid-feedback">
						請輸入帳號
					</div>

				</div>

				<div class="form-floating mt-5">
					<input type="password" class="form-control" name="password" placeholder="Password" required>
					<label>密碼</label>
					<div class="invalid-feedback">
						請輸入密碼
					</div>
				</div>

				<div class="d-flex mt-5">
					<div class="form-floating">
						<input type="text" class="form-control" name="code" placeholder="code" required>
						<label>驗證碼</label>
						<div class="invalid-feedback">
							請輸入驗證碼
						</div>
					</div>
					<div>
						<%- include('./identify.ejs') %>
					</div>
				</div>

				<div>
					<% if (error){ %>
						<span class="text-danger">
							<%= error %>
						</span>
						<% } %>
				</div>

				<button class="w-100 btn btn-lg btn-primary mt-5" type="submit">登入</button>
			</form>
		</main>
	</div>

	<div class="copyright text-center">
		<p> &copy; 2023 All Rights Reserved. Designed by RocknTrade.</p>
	</div>

	<script src="../js/form-validation.js"></script>
	<%- include('./footer.ejs') %>